<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Tree View -->
        <record id="view_flight_phase_duration_tree" model="ir.ui.view">
            <field name="name">flight.phase.duration.tree</field>
            <field name="model">flight.phase.duration</field>
            <field name="arch" type="xml">
                <tree create="0">
                    <field name="phase_id"/>
                    <field name="time_kind"/>
                    <field name="flight_id" optional="show"/>
                    <field name="start_time"/>
                    <field name="end_time"/>
                    <field name="duration" widget="float_time"/>
                </tree>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_flight_phase_duration_form" model="ir.ui.view">
            <field name="name">flight.phase.duration.form</field>
            <field name="model">flight.phase.duration</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="flight_id"/>
                            <field name="phase_id"/>
                            <field name="time_kind"/>
                            <field name="start_time"/>
                            <field name="end_time"/>
                            <field name="duration" widget="float_time"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Search View -->
        <record id="view_flight_phase_duration_search" model="ir.ui.view">
            <field name="name">flight.phase.duration.search</field>
            <field name="model">flight.phase.duration</field>
            <field name="arch" type="xml">
                <search>
                    <field name="flight_id"/>
                    <field name="phase_id"/>
                    <group expand="0" string="Group By">
                        <filter string="Flight" name="group_by_flight" domain="[]" context="{'group_by': 'flight_id'}"/>
                        <filter string="Phase" name="group_by_phase" domain="[]" context="{'group_by': 'phase_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Action -->
        <record id="action_flight_phase_duration" model="ir.actions.act_window">
            <field name="name">Flight Phase Durations</field>
            <field name="res_model">flight.phase.duration</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_group_by_flight': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No phase durations found.
                </p>
                <p>
                    Phase durations are automatically calculated based on flight events.
                </p>
            </field>
        </record>

        <!-- Menu Item -->
        <menuitem id="menu_flight_phase_duration"
                  name="Phase Durations"
                  parent="flight.menu_flight_root"
                  action="action_flight_phase_duration"
                  sequence="20"/>

    </data>
</odoo>