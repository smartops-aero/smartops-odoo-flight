<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="flight_event_view_flight_form" model="ir.ui.view">
        <field name="name">flight.ops.flight.form</field>
        <field name="model">flight.flight</field>
        <field name="inherit_id" ref="flight.view_flight_form"/>
        <field name="arch" type="xml">
            <sheet position="inside">
                <notebook>
                    <page string="Times">
                        <field name="event_time_ids" widget="flight_event_time_matrix"
                               options="{'time_kinds': 'get_time_kinds'}">
                            <tree>
                                <field name="flight_id"/>
                                <field name="time_kind"/>
                                <field name="code_id"/>
                                <field name="time"/>
                            </tree>
                        </field>
                        <field name="phase_duration_ids" readonly="1">
                            <tree>
                                <field name="phase_id"/>
                                <field name="time_kind"/>
                                <field name="start_time"/>
                                <field name="end_time"/>
                                <field name="duration" widget="float_time"/>
                            </tree>
                        </field>
                        <group>
                            <field name="flight_duration" widget="float_time"/>
                            <field name="block_duration" widget="float_time"/>
                        </group>
                    </page>
                    <page string="Phase Durations">
                        <group>
                            <field name="flight_duration" widget="float_time"/>
                            <field name="block_duration" widget="float_time"/>
                        </group>
                        <field name="phase_duration_ids" readonly="1">
                            <tree>
                                <field name="phase_id"/>
                                <field name="time_kind"/>
                                <field name="start_time"/>
                                <field name="end_time"/>
                                <field name="duration" widget="float_time"/>
                            </tree>
                        </field>
                    </page>
                </notebook>
            </sheet>
        </field>

    </record>

</odoo>