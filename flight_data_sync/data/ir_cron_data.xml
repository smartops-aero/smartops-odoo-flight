<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="ir_cron_flight_data_sync" model="ir.cron">
        <field name="name">Sync Flight Data</field>
        <field name="model_id" ref="model_flight_data_sync_schedule"/>
        <field name="state">code</field>
        <field name="code">
            model.search([('active', '=', True), ('next_run', '&lt;=', fields.Datetime.now())]).mapped(lambda s: s.provider_id._sync(s))
        </field>
        <field name="interval_number">1</field>
        <field name="interval_type">hours</field>
        <field name="numbercall">-1</field>
        <field name="doall" eval="False"/>
    </record>
</odoo>