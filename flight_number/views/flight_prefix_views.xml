<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!-- Flight Prefix Tree View -->
    <record id="view_flight_prefix_tree" model="ir.ui.view">
        <field name="name">flight.prefix.tree</field>
        <field name="model">flight.prefix</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="description" />
            </tree>
        </field>
    </record>

    <!-- Flight Prefix Form View -->
    <record id="view_flight_prefix_form" model="ir.ui.view">
        <field name="name">flight.prefix.form</field>
        <field name="model">flight.prefix</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="description" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Flight Prefix Action Window -->
    <record id="action_flight_prefix_list" model="ir.actions.act_window">
        <field name="name">Flight Prefixes</field>
        <field name="res_model">flight.prefix</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
